.block--spotlight
  a
    display block
    background-color $module-spotlight-background-color
    box-shadow $module-spotlight-box-shadow
    text-decoration none
    transition: box-shadow 200ms ease-out
    padding-bottom rem(28px)

    +above(m)
      padding-bottom rem(30px)

    > figure
      margin 0
      line-height 0
      overflow hidden

      img
        transition: transform 0.8s ease

      &.desktop
        display none
        visibility hidden
      +above(m)
        &.mobile
          display none
          visibility none
        &.desktop
          display block
          visibility visible

    > h2
    > h3
      padding-left rem(30px)
      padding-right rem(30px)
      +above(m)
        padding-left: 'calc(%s * (-%s/%s * -%s) - (%s - %s * (-%s/%s * -%s)) + %s)' % (100vw 1 36 1 30px 30px 1 36 1 30px)
        padding-right: 'calc(%s * (-%s/%s * -%s) - (%s - %s * (-%s/%s * -%s)) + %s)' % (100vw 1 36 1 30px 30px 1 36 1 30px)

    > h2
      font-family $module-spotlight-name-font
      line-height $line-height-solid
      margin 0
      text-align left
      text-transform $module-spotlight-name-transform
      margin-top rem(27px)
      color $module-spotlight-name-color

      font-size $module-spotlight-name-size-mobile
      +above(m)
        margin-top rem(40px)
        font-size $module-spotlight-name-size-desktop

    > h3
      font-family $module-spotlight-title-font
      line-height $line-height-solid
      margin 0
      text-align left
      color $module-spotlight-title-color
      font-style $module-spotlight-title-style
      margin-top rem(10px)

      font-size $module-spotlight-title-size-mobile
      +above(m)
        font-size $module-spotlight-title-size-desktop

      &:after
        background-color: $module-spotlight-title-arrow-color
        background-repeat: no-repeat
        background-size: cover
        content: " "
        display inline-block
        height rem(16px)
        width rem(16px)
        mask: embedurl("../sprites/arrow-right.svg", "utf8") no-repeat 50% 50%/12px 12px
        margin-left: 0.15em
        transition: background-color 200ms ease-out, margin-left 200ms ease-out
        vertical-align middle

    &:hover
      box-shadow $module-spotlight-box-shadow-hover
      > h3:after
        margin-left: 0.35em
      figure img
        transform scale(1.08)


#content
  > .block--spotlight
    margin-bottom rem(12px)
    +above(m)
      margin-bottom rem(57px)

#block--spotlights-two
  padding-top rem(10px)
  padding-bottom rem(30px)

  +above(m)
    lost-flex-container: row
    padding-top rem(80px)
    padding-bottom rem(48px)

    .block--spotlight
      lost-column 15/36
      lost-offset: 2/36
