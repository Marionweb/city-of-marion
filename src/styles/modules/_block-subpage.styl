.block--subpage
  margin-bottom 2em

  figure
    margin 0
    z-index 0
    img
      @extend $lazy-load

  a
    display block
    background-color $module-subpages-background-color
    box-shadow $module-subpages-box-shadow
    text-decoration $module-subpages-link-decoration
    transition: box-shadow 200ms ease-out

  h3
    color $module-subpages-link-color
    font-family $module-subpages-link-font
    font-size $module-subpages-link-size
    font-weight $module-subpages-link-weight
    margin 0
    padding 1em
    text-transform $module-subpages-link-transform
    transition: $link-transition
    &:after
      background-color: $module-subpages-arrow-color
      background-repeat: no-repeat
      background-size: cover
      content: " "
      display inline-block
      height rem(16px)
      width rem(16px)
      mask: embedurl("../sprites/arrow-right.svg", "utf8") no-repeat 50% 50%/12px 12px
      margin-left: 0.15em
      transition: background-color 200s ease-out, margin-left 200s ease-out
      vertical-align middle

  a:hover
    box-shadow $module-subpages-box-shadow-hover
    h3
      color $module-subpages-link-hover-color
      &:after
        margin-left: 0.35em

