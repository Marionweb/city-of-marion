#block--subpages
#block--quick-links
  background-color $module-quick-links-background-color
  border-top $module-quick-links-top-border
  box-shadow $module-quick-links-box-shadow
  padding rem(65px) rem(30px) rem(60px)
  margin-bottom 2em
  +above(xl)
    padding rem(66.5px) calc((100vw * (1/36))) rem(65px)
  > h3
    font-family $module-quick-links-title-font
    font-size $module-quick-links-title-size
    margin 0 0 rem(30px)
    text-align left
    text-transform $module-quick-links-title-transform
    &:before
      background-color: $module-quick-links-link-color
      background-repeat: no-repeat
      background-size: cover
      content: " "
      display inline-block
      height rem(16px)
      width rem(16px)
      margin-right: 0.35em
      transition: background-color $transition-timing
      vertical-align middle

  ul
    margin 0
    padding 0
    list-style none
  li
    font-size $module-quick-links-link-size
    font-weight $module-quick-links-link-weight
    margin 1em 0
    &:last-child
      margin-bottom 0


#block--subpages
  > h3:before
    mask: embedurl("../sprites/arrow-subpage.svg", "utf8") no-repeat 50% 50%/12px 12px
#block--quick-links
  > h3:before
    mask: embedurl("../sprites/arrow-angle.svg", "utf8") no-repeat 50% 50%/12px 12px


// STYLES FOR WHEN USED IN MAIN COLUMN
#content #block--subpages
#content #block--quick-links
  > h3
    text-align left

  ul
    width: 100%
    +above(m)
      display: flex
      flex-flow: row wrap
      align-items: stretch

  li
    display block
    +above(m)
      flex-grow: 1
      display inline-block
      min-width 'calc(%s - %s)' % (percentage(1/4) rem(7.5px))
      margin rem(3.75px) 0 rem(3.75px) rem(7.5px)

  a
    button()
    display block


// STYLES FOR WHEN USED IN ASIDE COLUMN
aside #block--subpages
aside #block--quick-links
  a
    color $module-quick-links-link-color
    text-decoration $module-quick-links-link-decoration
    transition: $link-transition
    &:after
      background-color: $module-quick-links-arrow-color
      background-repeat: no-repeat
      background-size: cover
      content: " "
      display inline-block
      height rem(16px)
      width rem(16px)
      mask: embedurl("../sprites/arrow-right.svg", "utf8") no-repeat 50% 50%/12px 12px
      margin-left: 0.15em
      transition: background-color $transition-timing, transform $transition-timing
      vertical-align middle

    &:hover
      color $module-quick-links-link-hover-color
      &:after
        transform translateX(0.35em)
