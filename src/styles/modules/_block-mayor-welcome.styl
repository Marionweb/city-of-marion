#block--mayor-welcome
  background-color $module-mayors-welcome-background-color
  box-shadow $module-mayors-welcome-box-shadow
  margin-bottom rem(40px)
  padding-bottom rem(45px)
  padding-left rem(30px)
  padding-right rem(30px)
  position relative

  +above(m)
    margin-bottom rem(68px)
    padding-left: 'calc(%s * (-%s/%s * -%s) - (%s - %s * (-%s/%s * -%s)) + %s)' % (100vw 2 36 1 30px 30px 2 36 1 30px)
    padding-right: 'calc(%s * (-%s/%s * -%s) - (%s - %s * (-%s/%s * -%s)) + %s)' % (100vw 2 36 1 30px 30px 2 36 1 30px)
    padding-top rem(62px)
    padding-bottom rem(80px)


  &::before
    background: embedurl("../images/banner.svg", "utf8") no-repeat right center
    background-size 100% auto
    content: ''
    display: block
    height: rem(6px)
    position: absolute
    top 0
    left 0
    right 0

  > figure
    border rem(5px) solid $white
    border-radius 100%
    box-shadow 0 0 rem(20px) 0 rgba($black, 0.1)
    display block
    height rem(102px)
    margin 0 auto
    overflow hidden
    position relative
    top -(rem(16px))
    width rem(102px)
    +above(m)
      border rem(10px) solid $white
      height rem(160px)
      margin 0
      position absolute
      right 'calc(%s * (-%s/%s * -%s) - (%s - %s * (-%s/%s * -%s)) + %s) !important' % (100vw 1 36 1 30px 30px 1 36 1 30px)
      top -(rem(35px))
      width rem(160px)


  > h2
  > h3
    font-family $module-mayors-welcome-title-font
    line-height 1.1
    margin 0
    text-align center
    text-transform $module-mayors-welcome-title-transform
    +above(m)
      padding-right rem(100px)
      text-align left

  > h3
    margin-top rem(20px)
    color $module-mayors-welcome-name-color
    font-size $module-mayors-welcome-name-size-mobile
    +above(m)
      font-size $module-mayors-welcome-name-size-desktop
  > h2
    color $module-mayors-welcome-headline-color
    font-size $module-mayors-welcome-headline-size-mobile
    +above(m)
      font-size $module-mayors-welcome-headline-size-desktop

  > p
    color $module-mayors-welcome-text-color
    font-size $module-mayors-welcome-text-size-mobile
    line-height 1.55
    margin-bottom 0
    +above(m)
      font-size $module-mayors-welcome-text-size-desktop
  > a
    @extend $button
    display block
    margin-top rem(35px)
    +above(m)
      display inline-block
      min-width rem(220px)
