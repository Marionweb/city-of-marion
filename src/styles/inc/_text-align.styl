/*

  TEXT ALIGN
  Docs: http://tachyons.io/docs/typography/text-align/

  Base
    t = text-align

  Modifiers
    l = left
    r = right
    c = center

  Media Query Extensions:
    -ns = not-small
    -m  = medium
    -l  = large

*/
.tl
  text-align: left
.tr
  text-align: right
.tc
  text-align: center

+above(mobile)
  .tl-ns
    text-align: left
  .tr-ns
    text-align: right
  .tc-ns
    text-align: center

+tablet()
  .tl-m
    text-align: left
  .tr-m
    text-align: right
  .tc-m
    text-align: center

+desktop()
  .tl-l
    text-align: left
  .tr-l
    text-align: right
  .tc-l
    text-align: center
