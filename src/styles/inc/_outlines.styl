/*

   OUTLINES

   Media Query Extensions:
     -ns = not-small
     -m  = medium
     -l  = large

*/

.outline
  outline: 1px solid
.outline-transparent
  outline: 1px solid transparent
.outline-0
  outline: 0

+above(mobile)
  .outline-ns
    outline: 1px solid
  .outline-transparent-ns
    outline: 1px solid transparent
  .outline-0-ns
    outline: 0

+tablet()
  .outline-m
    outline: 1px solid
  .outline-transparent-m
    outline: 1px solid transparent
  .outline-0-m
    outline: 0

+desktop()
  .outline-l
    outline: 1px solid
  .outline-transparent-l
    outline: 1px solid transparent
  .outline-0-l
    outline: 0
