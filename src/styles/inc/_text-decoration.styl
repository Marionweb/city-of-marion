/*

   TEXT DECORATION
   Docs: http://tachyons.io/docs/typography/text-decoration/


   Media Query Extensions:
     -ns = not-small
     -m  = medium
     -l  = large

*/
.strike
  text-decoration: line-through
.underline
  text-decoration: underline
.no-underline
  text-decoration: none

+above(mobile)
  .strike-ns
    text-decoration: line-through
  .underline-ns
    text-decoration: underline
  .no-underline-ns
    text-decoration: none

+tablet()
  .strike-m
    text-decoration: line-through
  .underline-m
    text-decoration: underline
  .no-underline-m
    text-decoration: none

+desktop()
  .strike-l
    text-decoration: line-through
  .underline-l
    text-decoration: underline
  .no-underline-l
    text-decoration: none
