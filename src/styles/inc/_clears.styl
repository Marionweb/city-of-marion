   http://tachyons.io/docs/layout/clearfix/

*/
/* Nicolas Gallaghers Clearfix solution
   Ref: http://nicolasgallagher.com/micro-clearfix-hack/ */
.cf:before,
.cf:after
  content: " "
  display: table
.cf:after
  clear: both
.cf
  *zoom: 1
.cl
  clear: left
.cr
  clear: right
.cb
  clear: both
.cn
  clear: none

+above(mobile)
  .cl-ns
    clear: left
  .cr-ns
    clear: right
  .cb-ns
    clear: both
  .cn-ns
    clear: none

+tablet()
  .cl-m
    clear: left
  .cr-m
    clear: right
  .cb-m
    clear: both
  .cn-m
    clear: none

+desktop()
  .cl-l
    clear: left
  .cr-l
    clear: right
  .cb-l
    clear: both
  .cn-l
    clear: none
