.page-section--homepage
  #header-image
    position: relative

    > h1
      position: absolute
      top: auto
      left: rem(30px)
      bottom: rem(30px)
      transform none
      margin 0
      z-index 5

      color: $homepage-header-block-title-color
      font-family: $homepage-header-block-title-font
      font-size: $homepage-header-block-title-size-mobile
      font-weight: $homepage-header-block-title-weight
      line-height 2
      text-transform: $homepage-header-block-title-transform
      +above(m)
        font-size: $homepage-header-block-title-size-desktop

      > span
        background-color: $homepage-header-block-title-color
        background-repeat: no-repeat
        background-size: cover
        display table
        height rem(65px)
        width rem(260px)
        mask: embedurl("../images/logo-com-champions.svg", "utf8") no-repeat 50% 50%/100% 100%
        strong
          @extend .hide-text

        +above(m)
          height rem(106px)
          width rem(424px)


  #content
    position: relative

    &::before
      background: embedurl("../images/banner.svg", "utf8") no-repeat 50% 50%/101% auto
      content: ''
      display: block
      height: rem(6px)
      position:relative
      width: 100%
