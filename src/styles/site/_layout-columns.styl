#page--inner--columns
  +above(m)
    lost-flex-container: row
  // +above(xl)
  //   padding rem(90px) rem(160px)


  &.one
    & > main
      // placeholder:
      background-color $white




  &.two
    +above(m)
      lost-flex-container: row
    main
      padding 0 rem(30px)
      +above(m)
        padding 0
      +between(m, l)
        lost-column 16/36
        lost-offset: 2/36
      +above(xl)
        lost-column 14/36
        lost-offset: 4/36
    aside
      +between(m, l)
        lost-column 13/36
        lost-offset: 3/36
      +above(xl)
        lost-column 10/36
        lost-offset: 4/36


    &.news-events
      main
        margin: rem(40px) 0

      &:not(.parallax)
        #header-image.news-events-article
          margin: 0 0 rem(30px) 0
        +above(m)
          margin: rem(40px) 0 0
          aside
            margin-top -(rem(40px))
