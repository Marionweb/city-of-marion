{#
    Page Structure Template
#}

{% extends entry.type == 'standard'
    ? 'layouts/columns/_two_parallax'
    : 'layouts/columns/_one_parallax' %}

{% set title = entry.title %}
{% set type = entry.type %}


{# HEADER IMAGE #}
{% block headerBlock %}
  {% include "modules/content/_header-block" %}
{% endblock %}


{# HTML #}
{% block main %}
  {% include "structure/pages/_types/_" ~ entry.type %}
{% endblock %}


{# ASIDE #}
{% block aside %}
  {% include "modules/content/_block-quick-links" %}
{% endblock %}
