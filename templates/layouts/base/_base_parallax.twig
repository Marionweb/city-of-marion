{#
    Base Layout - Parallax
#}

{% extends "layouts/base/_core" %}

{% block core %}
<div class="parallax">

  <div class="parallax__layer parallax__layer--back">
    {% if entry.section.handle != 'pages' %}{% include 'modules/bread/_crumbs' %}{% endif %}
    {% block parallaxBack %}{% endblock %}
  </div>

  <div class="parallax__layer parallax__layer--base">

    {% if entry.section.handle == 'pages' %}{% include 'modules/bread/_crumbs' %}{% endif %}

    {% block content %}{% endblock %}

    {# {% cache for 4 weeks %} #}
      {% include 'modules/footer/_footer' %}
    {# {% endcache %} #}

  </div>

</div>

{% endblock %}
