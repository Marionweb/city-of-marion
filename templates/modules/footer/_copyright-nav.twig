<nav>
  <ul>
    {% set copyrightNav = footer.footerSubMenu %}
    {% nav item in copyrightNav %}
      {% if item.type == "customMenuItem" %}
        <li class="footer--copyright-nav--item footer--copyright-nav--item-text"><a href="{{item.menuItemUrl}}"{% if item.newWindow %} target="_blank"{% endif %}>{{item.menuItemTitle}}</a></li>
      {% elseif item.type == "entryMenuItem" %}
        {% set entry = item.entry.one() %}
        <li class="footer--copyright-nav--item"><a href="#">{% if item.titleOverride %}{{item.titleOverride}}{% else %}{{entry.title}}{% endif %}</a></li>
      {% endif %}
    {% endnav %}
  </ul>
</nav>
