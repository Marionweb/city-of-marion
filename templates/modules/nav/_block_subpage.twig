<section id="{{ entry.id }}-{{ entry.slug }}" class="block--subpage">
  <a href="{{ entry.url }}" title="{{ entry.title }}">
  {% if entry.primaryImage | length %}
    {%- set image = entry.primaryImage.one() -%}

    <figure>
        <img class="lazyload"
          src="{{ image.optimizedImagesBlockPreview.placeholderBox() }}"
          data-sizes="auto"
          data-srcset="{{ image.optimizedImagesBlockPreview.srcset() }}"
          {% if image.alt %}alt="{{ image.alt }}"{% endif %}>
      {% if image.caption %}
      <figcaption>{{ image.caption }}</figcaption>
      {% endif %}
    </figure>
  {% endif %}

    <h3>{{ entry.title }}</h3>
  </a>
</section>
