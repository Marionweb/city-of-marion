{% if entry.videoFeatureBlock | length %}
  {% set videoBlock = entry.videoFeatureBlock.one() %}

  <section id="block--featured-video">
    {% if videoBlock.backgroundImage | length %}

      {% set image = videoBlock.backgroundImage.one() %}

      <figure class="mobile">
        <img class="lazyload"
          src="{{ image.optimizedImagesHomepageVideoFeatureBg.placeholderBox() }}"
          data-sizes="100vw"
          data-srcset="{{ image.optimizedImagesHomepageVideoFeatureBg.srcset() }}"
          {% if image.alt %}alt="{{ image.alt }}"{% endif %}>
        {% if image.caption %}
        <figcaption>{{ image.caption }}</figcaption>
        {% endif %}
      </figure>

      <figure class="desktop">
        <img class="lazyload"
          src="{{ image.optimizedImagesHomepageVideoFeatureBg.placeholderBox() }}"
          data-sizes="100vw"
          data-srcset="{{ image.optimizedImagesHomepageVideoFeatureBg.srcset() }}"
          {% if image.alt %}alt="{{ image.alt }}"{% endif %}>
        {% if image.caption %}
        <figcaption>{{ image.caption }}</figcaption>
        {% endif %}
      </figure>
    {% endif %}

    {% set video = videoBlock.video %}
    {% if video | length %}

    <div id="block--featured-video--content">
      <div id="block--featured-video--title">
        <h2>{{ videoBlock.headline | nl2br | typogrify }}</h2>
        {% if videoBlock.subHeadline %}<h3>{{ videoBlock.subHeadline | nl2br | typogrify }}</h3>{% endif %}
      </div>
      <a id="block--featured-video--play" data-fancybox href="{{ video.url }}" data-options='{"toolbar" : false, "smallBtn" : true}' title="Play Video"><span>Play Video</span></a>
    </div>
    {% endif %}

  </section>
{% endif %}
