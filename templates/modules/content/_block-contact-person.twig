{% if (entry.contactPerson is defined) and (entry.contactPerson | length) %}
<section class="page-content page-content--block block--contact-person">
  <h4>Contact Us</h4>
  <ul>
  {% for person in entry.contactPerson.all() %}
    {% set member = person.person.one() %}
    {% include "modules/content/_block-staff-member" %}
    {% set contactFor = person.contactFor.all() %}
    {% if contactFor | length %}
    <dl>
      <dt>Contact for: </dt>
      {% for item in contactFor %}
      <dd>{{item}}</dd>
      {% endfor %}
    {% endif %}
  {% endfor %}
  </ul>
</section>
{% endif %}